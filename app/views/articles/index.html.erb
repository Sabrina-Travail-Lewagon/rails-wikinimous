<% @articles.each do |article| %>
<div class="container">
  <div class="row">
    <div class="col-sm-8 col-sm-offset-2">
      <div class="article">
        <h2><%= link_to article.title, article_path(article) %></h2>
        <p><%= article.content %></p>
      </div>
    </div>
  </div>
</div>
<% end %>
