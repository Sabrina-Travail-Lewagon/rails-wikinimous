<% @articles.each do |article| %>
  <div class="row justify-content-center">
    <div class="col-6 col-sm-4">
      <div class="article">
        <h2><%= link_to article.title, article_path(article) %></h2>
        <p><%= truncate(article.content, length: 100, separator: ' ') %></p>
      </div>
    </div>
  </div>
<% end %>
